# =============================================================================
# CREDIT CARD OPTIMIZER - ENVIRONMENT VARIABLES
# =============================================================================
# Copy this file to .env and update the values as needed
# cp env.example .env

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
NODE_ENV=development
PORT=3001
API_VERSION=v1

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL=postgresql://postgres:password@localhost:5432/credit_card_optimizer
DB_HOST=localhost
DB_PORT=5432
DB_NAME=credit_card_optimizer
DB_USER=postgres
DB_PASSWORD=password

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379

# =============================================================================
# JWT AUTHENTICATION
# =============================================================================
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# =============================================================================
# SMS PROCESSING
# =============================================================================
SMS_PROCESSING_ENABLED=true
SMS_BATCH_SIZE=100
SMS_PROCESSING_INTERVAL=5000

# =============================================================================
# PAYMENT GATEWAY INTEGRATION
# =============================================================================
PAYMENT_GATEWAY_API_KEY=your-payment-gateway-api-key
PAYMENT_GATEWAY_SECRET=your-payment-gateway-secret
PAYMENT_GATEWAY_WEBHOOK_SECRET=your-webhook-secret

# =============================================================================
# ML SERVICES
# =============================================================================
ML_SERVICE_URL=http://localhost:8000
ML_SERVICE_API_KEY=your-ml-service-api-key
ML_SERVICE_PORT=8000
ML_MODEL_PATH=/app/models

# =============================================================================
# EMAIL SERVICE
# =============================================================================
EMAIL_SERVICE=sendgrid
SENDGRID_API_KEY=your-sendgrid-api-key
EMAIL_FROM=noreply@creditcardoptimizer.com

# =============================================================================
# SMS SERVICE
# =============================================================================
SMS_SERVICE=twilio
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# =============================================================================
# FILE UPLOAD
# =============================================================================
UPLOAD_MAX_SIZE=10485760
UPLOAD_PATH=./uploads

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# CORS
# =============================================================================
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# =============================================================================
# SECURITY
# =============================================================================
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret

# =============================================================================
# MONITORING
# =============================================================================
SENTRY_DSN=your-sentry-dsn
NEW_RELIC_LICENSE_KEY=your-new-relic-key

# =============================================================================
# DEVELOPMENT
# =============================================================================
DEBUG=true
ENABLE_SWAGGER=true
ENABLE_GRAPHIQL=true

# =============================================================================
# WEB DASHBOARD
# =============================================================================
WEB_DASHBOARD_PORT=3000

# =============================================================================
# NGINX CONFIGURATION
# =============================================================================
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443
NGINX_HOST=localhost
NGINX_PORT=80 